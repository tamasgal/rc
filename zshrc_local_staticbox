export PATH=$HOME/opt/bin:/var/lib/snapd/snap/bin:$PATH

setxkbmap -option ctrl:nocaps

alias vim=nvim

function steam-launcher() {
    export LD_PRELOAD="/usr/lib/libgio-2.0.so.0 /usr/lib/libglib-2.0.so.0"
    steam
}

